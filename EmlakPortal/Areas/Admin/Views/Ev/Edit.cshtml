@model EmlakPortal.Models.Ev

@{
    ViewData["Title"] = "İlanı Düzenle";
}

<div class="card shadow-sm">
    <div class="card-header bg-warning text-dark">
        <h5 class="mb-0">✏️ İlanı Düzenle</h5>
    </div>
    <div class="card-body">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Id" />

            <div class="row">
                <div class="col-md-8">

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="IlanTurId" class="form-label">İlan Türü</label>
                            <select asp-for="IlanTurId" class="form-select" asp-items="ViewBag.Turler"></select>
                            <span asp-validation-for="IlanTurId" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="IlanDurumId" class="form-label">İlan Durumu</label>
                            <select asp-for="IlanDurumId" class="form-select" asp-items="ViewBag.Durumlar"></select>
                            <span asp-validation-for="IlanDurumId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Baslik" class="form-label">İlan Başlığı</label>
                        <input asp-for="Baslik" class="form-control" />
                        <span asp-validation-for="Baslik" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Aciklama" class="form-label">Açıklama</label>
                        <textarea asp-for="Aciklama" class="form-control" rows="5"></textarea>
                        <span asp-validation-for="Aciklama" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Adres" class="form-label">Adres</label>
                        <input asp-for="Adres" class="form-control" />
                        <span asp-validation-for="Adres" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="mb-3">
                        <label asp-for="Fiyat" class="form-label">Fiyat (₺)</label>
                        <input asp-for="Fiyat" class="form-control" type="text" />
                        <span asp-validation-for="Fiyat" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ResimUrl" class="form-label">Resim URL</label>
                        <input asp-for="ResimUrl" class="form-control" />
                        <span asp-validation-for="ResimUrl" class="text-danger"></span>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.ResimUrl))
                    {
                        <div class="mb-3 text-center">
                            <img src="@Model.ResimUrl" style="max-width: 100%; height: auto; border-radius: 5px;" />
                            <small class="text-muted d-block mt-1">Mevcut Resim</small>
                        </div>
                    }

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-warning">💾 Güncelle</button>
                        <a asp-action="Index" class="btn btn-secondary">İptal</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
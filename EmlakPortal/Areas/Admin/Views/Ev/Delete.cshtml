@model EmlakPortal.Models.Ev

@{
    ViewData["Title"] = "İlanı Sil";
}

<div class="card shadow-sm border-danger">
    <div class="card-header bg-danger text-white">
        <h5 class="mb-0">🚨 İlanı Silmek İstediğinize Emin misiniz?</h5>
    </div>
    <div class="card-body">
        <div class="alert alert-warning">
            <strong>Dikkat!</strong> Bu işlem geri alınamaz.
        </div>

        <dl class="row">
            <dt class="col-sm-2">Başlık</dt>
            <dd class="col-sm-10">@Model.Baslik</dd>

            <dt class="col-sm-2">Fiyat</dt>
            <dd class="col-sm-10">@Model.Fiyat.ToString("N2") ₺</dd>

            <dt class="col-sm-2">Adres</dt>
            <dd class="col-sm-10">@Model.Adres</dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />

            <button type="submit" class="btn btn-danger">🗑️ Evet, Sil</button>
            <a asp-action="Index" class="btn btn-secondary">İptal</a>
        </form>
    </div>
</div>
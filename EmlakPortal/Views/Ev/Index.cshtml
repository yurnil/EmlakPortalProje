@model IEnumerable<EmlakPortal.Models.Ev>

@{
    ViewData["Title"] = "Ev Listesi";
}

<h1>Ev Listesi</h1>

<p>
    <a asp-action="Create" asp-controller="Ev" class="btn btn-primary">Yeni Ev Ekle</a>
</p>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-warning" role="alert">
        Gösterilecek ev bulunamadı. Lütfen önce birkaç ev ekleyin.
    </div>
}
else
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    Resim

                </th>
                <th>
                    Açıklama (Başlık)
                </th>
                <th>
                    Fiyat
                </th>
                <th>
                </th>
                <th>
                    İşlemler
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @if (!string.IsNullOrEmpty(item.ResimUrl))
                        {
                            <img src="@item.ResimUrl" alt="@item.Baslik" style="width: 100px; height: 75px; object-fit: cover; border-radius: 5px;" />
                        }
                        else
                        {
                            <span class="text-muted">Resim Yok</span>
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Baslik)
                    </td>
                    <td>
                        @item.Fiyat.ToString("N2")
                    </td>
                    <td>
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Düzenle</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Detaylar</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
@model EmlakPortal.Models.Ev

@{
    ViewData["Title"] = "Sil";
}

<h1>Sil</h1>

<h3>Bu evi silmek istediğinize emin misiniz?</h3>
<div>
    <h4>Ev Bilgileri</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Başlık
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Baslik)
        </dd>

        <dt class="col-sm-2">
            Fiyat
        </dt>
        <dd class="col-sm-10">
            @Model.Fiyat.ToString("N2") ₺
        </dd>

        <dt class="col-sm-2">
            Adres
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Adres)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />

        <input type="submit" value="Evet, Sil" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Vazgeç, Listeye Dön</a>
    </form>
</div>
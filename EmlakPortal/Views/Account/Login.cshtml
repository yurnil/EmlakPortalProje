@{
    Layout = null; // Menüler görünmesin, sade bir sayfa olsun
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Yönetici Girişi</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

    <div class="container d-flex justify-content-center align-items-center" style="height: 100vh;">
        <div class="card shadow p-4" style="width: 400px;">
            <h3 class="text-center mb-3">Admin Girişi</h3>

            @if (ViewBag.Hata != null)
            {
                <div class="alert alert-danger">@ViewBag.Hata</div>
            }

            <form method="post" action="/Account/Login">
                <div class="mb-3">
                    <label>Kullanıcı Adı:</label>
                    <input type="text" name="kadi" class="form-control" placeholder="admin" required />
                </div>

                <div class="mb-3">
                    <label>Şifre:</label>
                    <input type="password" name="sifre" class="form-control" placeholder="123" required />
                </div>

                <button type="submit" class="btn btn-primary w-100">Giriş Yap</button>
            </form>

            <div class="text-center mt-3">
                <a href="/" class="text-decoration-none">← Siteye Dön</a>
            </div>
        </div>
    </div>

</body>
</html>